<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hsu.icesimon.facebookfresco" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- External storage for caching. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.fresco.sample.configs.glide.SampleGlideModule"
            android:value="GlideModule" />
        <activity
            android:name=".RemoteImageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_remote_image" >
        </activity>
        <activity
            android:name=".LocalImageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_local_image" >
        </activity>
        <activity
            android:name=".LocalImagePicassoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_local_image" >
        </activity>
        <activity
            android:name=".LocalImageUILActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_local_image" >
        </activity>
        <activity
            android:name=".LocalImagePicassoUILHybirdActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_local_image" >
        </activity>
        <activity
            android:name=".LocalImageAllHybirdActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_local_image" >
        </activity>

    </application>

</manifest>
